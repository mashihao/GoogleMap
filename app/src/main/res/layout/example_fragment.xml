    <TextView
        android:id="@+id/home_title_nearby_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Hotels"
        mapbox:layout_constraintEnd_toEndOf="@+id/home_title_nearby_btn1"
        mapbox:layout_constraintStart_toStartOf="@+id/home_title_nearby_btn1"
        mapbox:layout_constraintTop_toBottomOf="@+id/home_title_nearby_btn1" />

    <Button
        android:id="@+id/home_title_nearby_btn1"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:layout_marginTop="88dp"
        android:background="@drawable/btn_circle1"
        mapbox:layout_constraintEnd_toEndOf="parent"
        mapbox:layout_constraintHorizontal_bias="0.5"
        mapbox:layout_constraintStart_toEndOf="@+id/home_title_nearby_btn2"
        mapbox:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/home_title_nearby_btn2"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:layout_marginTop="88dp"
        android:background="@drawable/btn_circle2"
        mapbox:layout_constraintEnd_toStartOf="@+id/home_title_nearby_btn1"
        mapbox:layout_constraintHorizontal_bias="0.5"
        mapbox:layout_constraintStart_toEndOf="@+id/home_title_nearby_btn4"
        mapbox:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/home_title_nearby_btn3"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:layout_marginTop="88dp"
        android:background="@drawable/btn_circle3"
        mapbox:layout_constraintEnd_toStartOf="@+id/home_title_nearby_btn4"
        mapbox:layout_constraintHorizontal_bias="0.5"
        mapbox:layout_constraintStart_toStartOf="parent"
        mapbox:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/home_title_nearby_btn4"
        android:layout_width="60dp"
        android:layout_height="60dp"

        android:layout_marginTop="88dp"
        android:background="@drawable/btn_circle4"
        mapbox:layout_constraintEnd_toStartOf="@+id/home_title_nearby_btn2"
        mapbox:layout_constraintHorizontal_bias="0.5"
        mapbox:layout_constraintStart_toEndOf="@+id/home_title_nearby_btn3"
        mapbox:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:layout_marginStart="8dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/darker_gray"
        mapbox:layout_constraintEnd_toEndOf="parent"
        mapbox:layout_constraintHorizontal_bias="0.0"
        mapbox:layout_constraintStart_toStartOf="parent"
        mapbox:layout_constraintTop_toTopOf="parent" />



    <HorizontalScrollView
        android:layout_width="395dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        mapbox:layout_constraintBottom_toTopOf="@+id/view2"
        mapbox:layout_constraintEnd_toEndOf="parent"
        mapbox:layout_constraintStart_toStartOf="parent"
        mapbox:layout_constraintTop_toBottomOf="@+id/view"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/keyword1"
                android:layout_width="86dp"
                android:layout_height="36dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_keyword"
                android:text="SHOPPING"
                tools:layout_editor_absoluteX="124dp"
                tools:layout_editor_absoluteY="347dp" />

            <Button
                android:id="@+id/keyword2"
                android:layout_width="86dp"
                android:layout_height="36dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_keyword"
                android:text="SHOPPING"
                tools:layout_editor_absoluteX="319dp"
                tools:layout_editor_absoluteY="347dp" />

            <Button
                android:id="@+id/keyword3"
                android:layout_width="86dp"
                android:layout_height="36dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_keyword"
                android:text="SHOPPING"
                tools:layout_editor_absoluteX="226dp"
                tools:layout_editor_absoluteY="347dp" />

            <Button
                android:id="@+id/keyword4"
                android:layout_width="86dp"
                android:layout_height="36dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_keyword"
                android:text="SHOPPING"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="347dp" />

            <Button
                android:id="@+id/keyword5"
                android:layout_width="86dp"
                android:layout_height="36dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_keyword"
                android:text="SHOPPING"
                tools:layout_editor_absoluteX="226dp"
                tools:layout_editor_absoluteY="347dp" />

            <Button
                android:id="@+id/keyword6"
                android:layout_width="86dp"
                android:layout_height="36dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_keyword"
                android:text="SHOPPING"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="347dp" />

        </LinearLayout>
    </HorizontalScrollView>
    <View
        android:id="@+id/view2"
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/darker_gray"
        mapbox:layout_constraintEnd_toEndOf="parent"
        mapbox:layout_constraintHorizontal_bias="0.0"
        mapbox:layout_constraintStart_toStartOf="parent"
        mapbox:layout_constraintTop_toBottomOf="@+id/view" />


</androidx.constraintlayout.widget.ConstraintLayout>