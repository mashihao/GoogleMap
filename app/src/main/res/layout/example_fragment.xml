<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/home_title_nearby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:text="@string/home_title1"
        android:textSize="20sp"
        android:textStyle="bold"
        mapbox:layout_constraintEnd_toEndOf="parent"
        mapbox:layout_constraintHorizontal_bias="0.1"
        mapbox:layout_constraintStart_toStartOf="parent"
        mapbox:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/home_title_nearby2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="324dp"
        android:layout_marginEnd="8dp"
        android:text="@string/home_title1"
        android:textSize="20sp"
        android:textStyle="bold"
        mapbox:layout_constraintEnd_toEndOf="parent"
        mapbox:layout_constraintHorizontal_bias="0.1"
        mapbox:layout_constraintStart_toStartOf="parent"
        mapbox:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/home_title_nearby_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Resturants"
        mapbox:layout_constraintEnd_toEndOf="@+id/home_title_nearby_btn2"
        mapbox:layout_constraintStart_toStartOf="@+id/home_title_nearby_btn2"
        mapbox:layout_constraintTop_toBottomOf="@+id/home_title_nearby_btn2" />

    <TextView
        android:id="@+id/home_title_nearby_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Theaters"
        mapbox:layout_constraintEnd_toEndOf="@+id/home_title_nearby_btn3"
        mapbox:layout_constraintStart_toStartOf="@+id/home_title_nearby_btn3"
        mapbox:layout_constraintTop_toBottomOf="@+id/home_title_nearby_btn3" />

    <TextView
        android:id="@+id/home_title_nearby_text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Libraries"
        mapbox:layout_constraintEnd_toEndOf="@+id/home_title_nearby_btn4"
        mapbox:layout_constraintStart_toStartOf="@+id/home_title_nearby_btn4"
